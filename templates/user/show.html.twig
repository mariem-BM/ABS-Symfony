{% extends 'back.html.twig' %}

{% block title %}User
{% endblock %}

{% block content  %}
<h1>User</h1>

<table id="users" class="table table-striped table-bordered" style="width:100%">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ user.id }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ user.email }}</td>
		</tr>
		<tr>
			<th>Roles</th>
			<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
		</tr>
		<tr>
			<th>Password</th>
			<td>{{ user.password }}</td>
		</tr>
	</tbody>
</table>

<a href="{{ path('user_index') }}" class="btn btn-dark">Back to list</a>
<br>
<br>
<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
