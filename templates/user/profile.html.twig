{% extends 'user.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block content  %}
	{% if app.user %}

		<h1>Profile</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>First Name</th>
					<td>{{ app.user.firstname }}</td>
				</tr>
				<tr>
					<th>Last Name</th>
					<td>{{ app.user.lastname }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ app.user.email }}</td>
				</tr>

			</tbody>
		</table>
	{% endif %}

	<a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
{% endblock %}
