{% extends 'back.html.twig' %}

{% block title %}User index
{% endblock %}

{% block content  %}
	<div class="row">
		<div class="column">
			<h1>User index</h1>

		</div>
		<div class="column">
			<a href="{{ path('user_new') }}" class="btn btn-primary">Create new</a>

		</div>
	</div>


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>

					<td>

						<a href="{{ path('user_show', {'id': user.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
						<a href="{{ path('user_edit', {'id': user.id}) }}">
							<i class="fa fa-pencil" aria-hidden="true" style=" font-size:14px"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<script src="{{ asset ('theme/vendor/jquery/jquery.min.js')}}"></script>
	<script>
		$(document).ready(function () {
$('.table').DataTable();
});
	</script>
{% endblock %}
