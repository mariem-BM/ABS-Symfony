{% extends 'back.html.twig' %}
{% block title %}Ajouter Service
{% endblock %}
{% block content %}


	{#{{ form_start(form, {'action': path('add'), 'method': 'POST'}) }}#}
	<form action="{{ path('add') }}" method="post" novalidate>

		<div class="input-field col s12 m12 l12">
			{{ form_widget(form.picture, {'attr': {'placeholder': 'Insight Image'}}) }}
			{{ form_errors(form.picture) }}
		</div>
		<br>
		<div class="input-field col s12 m6 l6">
			{{ form_widget(form.title, {'attr': {'placeholder': 'Insight title'}}) }}
			{{ form_errors(form.title) }}

		</div>
		<br>

		<div class="input-field col s12 m12 l12">
			{{ form_widget(form.content, {'attr': {'class': 'materialize-textarea', 'placeholder': 'Insight content'}}) }}
			{{ form_errors(form.content) }}
		</div>
		<br>
		<div class="input-field col s12 m12 l12">
			{{ form_widget(form.readmore, {'attr': {'class': 'materialize-textarea', 'placeholder': 'Read more'}}) }}
			{{ form_errors(form.readmore) }}
		</div>


		<div class="input-field col s12 m12 l12">
			<p>
				<label>
					{{ form_widget(form.isPublished, {'attr': {'class': 'filled-in'}}) }}
					<span>Publier</span>
				</label>
			</p>
		</div>
		<br>
		<div class="input-field col s12 m12 l12">
			<input type="submit" name="" value="Add Insight" class="btn btn-primary">
		</div>
	</form>
{% endblock %}
