{% extends "back.html.twig" %}

{% block title%}

	Liste des Article
{% endblock %}
{% block content  %}
{% if articles %}


	<div class="row">
		<div class="column">
			<h1>List</h1>

		</div>
		<div class="column">
			<a href="{{ path('add') }}" class="btn btn-primary">Create new</a>

		</div>
	</div>

	<table id="articles" class="table table-striped table-bordered" style="width:100%">
		<thead>
			<tr>
				<th>picture</th>
				<th>title</th>
				<th>content</th>
				<th>Read More</th>
				<th>publicationDate</th>
				<th>lastUpdateDate</th>
				<th>isPublished</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>


			{% for article in articles %}


				<td>

					<img src="{{asset('uploads/brochures/'~article.picture)}}" height="98" width="98"></td>


				<td>{{ article.title }}</td>
				<td>{{ article.content }}</td>
				<td>{{ article.readmore }}</td>
				<td>{{ article.publicationDate }}</td>
				<td>{{ article.lastUpdateDate }}</td>
				<td>{{ article.isPublished }}</td>

				<td>

					<a href="/article/{{ article.id }}">
						<i class="fas fa-eye"></i>
					</a>
					<a href="/article/edit/{{ article.id }}">
						<i class="fa fa-pencil" aria-hidden="true" style=" font-size:14px"></i>
					</a>


					<a href="/article/delete/{{ article.id }}" onclick="return confirm('Etes-vous sûr vous sûr de supprimer cet article?');">
						<i class="fa fa-trash" aria-hidden="true"></i>
					</a>
				</td>
			</tbody>
		</tbody>
	</td>
</td></tbody>{% endfor %}</table>{% else %}<p>Aucun Article</p>{% endif %}<script src="{{ asset ('theme/vendor/jquery/jquery.min.js')}}"></script><script>$(document).ready(function () {
$('#articles').DataTable();
});</script>{% endblock %}
