{% if articles %}
	<div class="hero">
		<div class="hero__containeri" id="id_heroC">
			<div class="hero__container--left">
				<h2>INSIGHTS</h2>
			</div>
			<div class="hero__container--right" id="id_heroCR">
				<button class="hero__container--btn" id="seeIns">
					<a href="#">See all insights</a>
				</button>
			</div>
		</div>
		<br>
		<div class="container-fluid">
			<div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="2250">

				<div class="carousel-inner row w-10 mxauto" role="listbox">


					{% for article in articles %}


						<div class="carousel-item col-md-4 {% if loop.index0 == 0 %} active {% endif %}" href="{{ path('blogfront') }}">
							<div class=" i-box" id="insights_ibox">
								<img src="{{asset('uploads/brochures/'~article.picture)}}" alt=""/>

								<br>
								<p>{{ article.content }}</p>
								<a {{ article.readmore}}>Read more...</a>
								<p>{{ article.publicationDate }}</p>
								<p>{{ article.lastUpdateDate }}</p>

							</div>
						</div>
					{% endfor %}


					<a class="carousel-control-prev" id="caroussel_prev" href="#carouselExample" role="button" data-slide="prev">
						<i class="fa fa-chevron-left fa-lg text-muted"></i>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next text-faded" id="caroussel_next" href="#carouselExample" role="button" data-slide="next">
						<i class="fa fa-chevron-right fa-lg text-muted"></i>
						<span class="sr-only">Next</span>
					</a>


				</div>
			</div>
		</div>
	</div>


{% endif %}
