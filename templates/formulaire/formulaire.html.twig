{% extends 'back.html.twig' %}

{% block title%}
	Liste des formulaires
{% endblock %}
{% block content %}
<h1>List</h1>

	<a href="{{ path('addform') }}" class="btn btn-primary">Create new</a>
	{% if formulaires %}
		<table id="formulaires" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>name</th>
					<th>lastname</th>
					<th>email</th>
					<th>message</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for formulaire in formulaires %}
					<tr>
						<td>{{ formulaire.name }}</td>
						<td>{{ formulaire.lastname }}</td>
						<td>{{ formulaire.email }}</td>
						<td>{{ formulaire.message }}</td>
						<td>

							<a href="/formulaire/edit/{{ formulaire.id }}" class="btn btn-dark">Modifier</a>
							<a href="/formulaire/delete/{{ formulaire.id }}" class="btn btn-danger" onclick="return confirm('Etes-
																																																																																																																																																vous sÃ»r de supprimer cet article?');">Delete</a>

						</td>
					</tr>
				</td>
			</tbody>
		</tr>

	{% endfor %}
</tbody></table>{% else %}<p>Aucun Service</p>{% endif %}
<script>$(document).ready(function() {
    $('#formulaires').DataTable();
} ); </script>
{% endblock %}
