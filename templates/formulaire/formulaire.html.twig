{% extends 'back.html.twig' %}

{% block title%}
	Liste des formulaires
{% endblock %}
{% block content %}


	<div class="row">
		<div class="column">
			<h1>List</h1>

		</div>
		<div class="column">
			<a href="{{ path('addform') }}" class="btn btn-primary">Create new</a>.


		</div>
	</div>
	{% if formulaires %}
		<table id="formulaires" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>name</th>
					<th>lastname</th>
					<th>email</th>
					<th>message</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for formulaire in formulaires %}
					<tr>
						<td>{{ formulaire.name }}</td>
						<td>{{ formulaire.lastname }}</td>
						<td>{{ formulaire.email }}</td>
						<td>{{ formulaire.message }}</td>
						<td>

							<a href="/formulaire/edit/{{ formulaire.id }}">
								<i class="fa fa-pencil" aria-hidden="true" style=" font-size:14px"></i>
							</a>
							<a href="/formulaire/delete/{{ formulaire.id }}" onclick="return confirm('Etes-
																																																																																																																																																																																																			vous sÃ»r de supprimer cet article?');">
								<i class="fa fa-trash" aria-hidden="true"></i>
							</a>

						</td>
					</tr>
				</td>
			</tbody>
		</tr>

	{% endfor %}
</tbody></table>{% else %}<p>Aucun Service</p>{% endif %}<script src="{{ asset ('theme/vendor/jquery/jquery.min.js')}}"></script><script>$(document).ready(function () {
$('#formulaires').DataTable();
});</script>{% endblock %}
