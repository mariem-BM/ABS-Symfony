{% if refrencess %}
	<div class="hero" id="bgS7">
		<br>
		<br>
		<h2 id="titreS2">REFERENCES</h2>
		<br>
		<br>
		<br>
		<div class="container-fluid">
			<div id="carouselExample2" class="carousel slide" data-ride="carousel" data-interval="2250">
				<div class="carousel-inner row w-10 mxauto" role="listbox">


					{% for refrences in refrencess %}


						<div id="cars_item"class="carousel-item col-md-4 {% if loop.index0 == 0 %} active {% endif %}">
							<a href="{{ path('refrencesfront') }}">

