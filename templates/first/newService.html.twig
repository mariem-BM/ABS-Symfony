{% extends 'back.html.twig' %}
{% block title %}Ajouter Service
{% endblock %}
{% block body %}
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
	<div class="input-field col s12 m12 l12">
		{{ form_widget(form.img) }}
	</div>

	<div class="input-field col s12 m6 l6">
		{{ form_widget(form.nom, {'attr': {'placeholder': 'Titre de l\'service'}}) }}
    {{ form_label(form.nom, 'Le titre de votre service') }}
</div>


<div class="input-field col s12 m12 l12">
    {{ form_widget(form.description, {'attr': {'class': 'materialize-textarea', 'placeholder': 'Le contenu de l\'article'}}) }}
	</div>

	<div class="input-field col s12 m12 l12">
		{{ form_widget(form.details, {'attr': {'class': 'filled-in'}}) }}


	</div>

	<div class="input-field col s12 m12 l12">
		<input type="submit" name="" value="Enregistrer" class="btn btn-primary">
	</div>
	{{ form_end(form) }}
{% endblock %}
