{% extends 'back.html.twig' %}

{% block title%}
	Liste des Services
{% endblock %}
{% block content  %}
	{% if services %}


		<div class="row">
			<div class="column">
				<h1>List</h1>

			</div>
			<div class="column">
				<a href="{{ path('service/new') }}" class="btn btn-primary">Create new</a>

			</div>
		</div>
		<table id="services" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Img</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Details</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for service in services %}
					<tr>
						<td>
							<img id="sboximg" alt="1" src="{{asset('uploads/brochures/'~service.img)}}">
						</td>
						<td>{{ service.nom }}</td>
						<td>{{ service.description }}</td>
						<td>{{ service.details }}</td>
						<td>
							<a href="/service/{{ service.id }}">
								<i class="fas fa-eye"></i>
							</a>
							<a href="/service/edit/{{ service.id }}">
								<i class="fa fa-pencil" aria-hidden="true" style=" font-size:14px"></i>
							</a>
							<a href="/service/delete/{{ service.id }}" onclick="return confirm('Etes-vous sÃ»r de supprimer cet article?');">
								<i class="fa fa-trash" aria-hidden="true"></i>
							</a>

						</td>
					</tr>
				</td>
			</tbody>
		</tr>

	{% endfor %}
</tbody></table>{% else %}<p>Aucun Service</p>{% endif %}<script src="{{ asset ('theme/vendor/jquery/jquery.min.js')}}"></script><script>$(document).ready(function () {
$('#services').DataTable();
});</script>{% endblock %}
