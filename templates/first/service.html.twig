{% extends 'back.html.twig' %}

{% block title%}
	Liste des Services
{% endblock %}
{% block body %}
	{% if services %}
		<table id="services" class="table table-striped">
			<thead>
				<tr>
					<th>Img</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Details</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for service in services %}
					<tr>
						<td>{{ service.img }}</td>
						<td>{{ service.nom }}</td>
						<td>{{ service.description }}</td>
						<td>{{ service.details }}</td>
						<td>
							<a href="/service/{{ service.id }}" class="btn btn-dark">Détails</a>
							<a href="/service/edit/{{ service.id }}" class="btn btn-dark">Modifier</a>
							<a href="/service/delete/{{ service.id }}" class="btn btn-danger" onclick="return confirm('Etes-
																																																								vous sûr de supprimer cet article?');">Delete</a>

						</td>
					</tr>
				</td>
			</tbody>
		</tr>

	{% endfor %}
</tbody></table>{% else %}<p>Aucun Service</p>{% endif %}{% endblock %}
