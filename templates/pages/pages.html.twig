{% extends 'back.html.twig' %}

{% block title%}
	Liste des Services
{% endblock %}
{% block content  %}
	{% if pages %}


		<div class="row">
			<div class="column">
				<h1>List</h1>

			</div>
			<div class="column">
				<a href="{{ path('addpages') }}" class="btn btn-primary">Create new</a>


			</div>
		</div>
		<table id="services" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Img</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Details</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for page in pages %}

					<td><img src="{{asset('uploads/brochures/'~page.imgPages)}}" height="98" width="98"></td>

				</td>
				<td>{{ page.titre }}</td>
				<td>{{ page.description }}</td>
				<td>{{ page.pagesdetails }}</td>
				<td>
					<a href="/pages/{{ page.id }}">
						<i class="fas fa-eye"></i>
					</a>
					<a href="/pages/edit/{{ page.id }}">
						<i class="fa fa-pencil" aria-hidden="true" style=" font-size:14px"></i>
					</a>
					<a href="/pages/delete/{{ page.id }}" onclick="return confirm('Etes-vous sÃ»r de supprimer cette page?');">
						<i class="fa fa-trash" aria-hidden="true"></i>
					</a>
				</td>
			</tbody>
		{% endfor %}
	</table>
{% else %}
	<p>Aucun Service</p>
{% endif %}
<script src="{{ asset ('theme/vendor/jquery/jquery.min.js')}}"></script>
<script>
	$(document).ready(function () {
$('#services').DataTable();
});
</script>{% endblock %}
